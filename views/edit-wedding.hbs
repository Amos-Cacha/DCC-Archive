{{>navbar}}
<div id="wedding-info" 
    data-wedding-id="{{wedding_id}}" 
    data-couple-id="{{couple_id}}"
    data-date-created="{{date}}"
    data-weddingdate="{{wedding_date}}"
    data-location="{{location}}"
    data-solemnizer="{{solemnizer}}"
    data-officiant="{{officiant}}"
    data-contractno="{{contract_no}}"></div>
<form id="wedding_form" action="/create_wedding_registry" method="POST" class="container"> 
  <div class="container" style="padding-left: 18%; padding-right: 10%;">
    <h1 class="my-3"> Edit Wedding Registry </h1>
    <hr>
    <div class="row">
      <div class="col-4">
        <label for="current_date">Wedding Date*</label>
        <input type="date" id="date" name="date" class="form-control" value="{{date date}}">
        <p id="date_error" class="error_codes"> </p>
      </div>
      <div class="col-4">
        <label>Contract No.*</label>
        <input type="text" id="contract" class="form-control" value="{{contract_no}}">
        <p id="contract_info_error" class="error_codes"> </p>
      </div>
      <hr>
      <div class="row" id="bride_info" data-member="{{bride_member_id}}" data-person="{{bride_person_id}}">
        <legend>Bride</legend>
        <div class="col">
          <u for="first_name">First Name</u>
          <p><span id="bride_first_name">{{bride_first_name}}</span></p>
        </div>
        <div class="col">
          <u for="mid_name">Middle Initial</u>
          <p><span id="bride_mid_name">{{bride_mid_name}}</span></p>
        </div>
        <div class="col">
          <u for="last_name">Last Name</u>
          <p><span id="bride_last_name">{{bride_last_name}}</span></p>
          
        </div>
      </div>
      <div class="row">
        <div class="col d-flex justify-content-end">
          <button type="button" class="btn btn-secondary mb-4 float-right" id="edit_bride">Edit Bride</button>
        </div>
      </div>
      <hr>
      <div class="row" id="groom_info" data-member="{{groom_member_id}}" data-person="{{groom_person_id}}">
        <legend>Groom</legend>
        <div class="col">
          <u for="first_name">First Name</u>
          <p><span id="groom_first_name">{{groom_first_name}}</span></p>
        
        </div>
        <div class="col">
          <u for="mid_name">Middle Initial</u>
          <p><span id="groom_mid_name">{{groom_mid_name}}</span></p>
        </div>
        <div class="col">
          <u for="last_name">Last Name</u>
          <p><span id="groom_last_name">{{groom_last_name}}</span></p>
        </div>
      </div>
      <div class="row">
        <div class="col d-flex justify-content-end">
          <button type="button" class="btn btn-secondary mb-4 float-right" id="edit_groom">Edit Groom</button>
        </div>
      </div>
      <hr>
      <div class="row" id="bride_mother_info" data-member="{{bride_mother_member_id}}" data-person="{{bride_mother_person_id}}">
        <legend>Bride's Mother</legend>
        <div class="col">
          <u for="first_name">First Name</u>
          <p>
          <span id="bride_mother_first_name">
            {{#if (isUndefined bride_mother_first_name)}}
              N/A
            {{else}}
              {{bride_mother_first_name}}
            {{/if}}
          </span>
          </p>
        </div>
        <div class="col">
          <u for="mid_name">Middle Initial</u>
          <p>
          <span id="bride_mother_mid_name">
            {{#if (isUndefined bride_mother_mid_name)}}
              N/A
            {{else}}
              {{bride_mother_mid_name}}
            {{/if}}
          </span>
          </p>
        </div>
        <div class="col">
          <u for="last_name">Last Name</u>
          <p>
            <span id="bride_mother_last_name">
              {{#if (isUndefined bride_mother_last_name)}}
                N/A
              {{else}}
                {{bride_mother_last_name}}
              {{/if}}
            </span>
          </p>
        </div>
      </div>
      <div class="row">
        <div class="col d-flex justify-content-end">
          <button type="button" class="btn btn-secondary mb-4 float-right" id="edit_bride_mother">Edit Bride's Mother</button>
        </div>
      </div>
      <div class="row" id="bride_father_info" data-member="{{bride_father_member_id}}" data-person="{{bride_father_person_id}}">
        <legend>Bride's Father</legend>
        <div class="col">
          <u for="first_name">First Name</u>
          <p>
          <span id="bride_father_first_name">
            {{#if (isUndefined bride_father_first_name)}}
             N/A
            {{else}}
              {{bride_father_first_name}}
            {{/if}}
          </span>
          </p>
        </div>
        <div class="col">
          <u for="mid_name">Middle Initial</u>
          <p>
            <span id="bride_father_mid_name">
              {{#if (isUndefined bride_father_mid_name)}}
                N/A
              {{else}}
                {{bride_father_mid_name}}
              {{/if}}
            </span>
          </p>
        </div>
        <div class="col">
          <u for="last_name">Last Name</u>
          <p>
            <span id="bride_father_last_name">
              {{#if (isUndefined bride_father_last_name)}}
                N/A
              {{else}}
                {{bride_father_last_name}}
              {{/if}}
            </span>
          </p>
        </div>
      </div>
      <div class="row">
        <div class="col d-flex justify-content-end">
          <button type="button" class="btn btn-secondary mb-4 float-right" id="edit_bride_father">Edit Bride's Father</button>
        </div>
      </div>
      <hr>
      <div class="row" id="groom_mother_info" data-member="{{groom_mother_member_id}}" data-person="{{groom_mother_person_id}}">
        <legend>Groom's Mother</legend>
        <div class="col">
          <u for="first_name">First Name</u>
          <p>
            <span id="groom_mother_first_name">
              {{#if (isUndefined groom_mother_first_name)}}
                N/A
              {{else}}
                {{groom_mother_first_name}}
              {{/if}}
            </span>
          </p>
        </div>
        <div class="col">
          <u for="mid_name">Middle Initial</u>
          <p>
            <span id="groom_mother_mid_name">
              {{#if (isUndefined groom_mother_mid_name)}}
                N/A
              {{else}}
                {{groom_mother_mid_name}}
              {{/if}}
            </span>
          </p>
        </div>
        <div class="col">
          <u for="last_name">Last Name</u>
          <p>
            <span id="groom_mother_last_name">
              {{#if (isUndefined groom_mother_last_name)}}
                N/A
              {{else}}
                {{groom_mother_last_name}}
              {{/if}}
            </span>
          </p>
        </div>
      </div>
      <div class="row">
        <div class="col d-flex justify-content-end">
          <button type="button" class="btn btn-secondary mb-4 float-right" id="edit_groom_mother">Edit Groom's Mother</button>
        </div>
      </div>
      <div class="row" id="groom_father_info" data-member="{{groom_father_member_id}}" data-person="{{groom_father_person_id}}">
        <legend>Groom's Father</legend>
        <div class="col">
          <u for="first_name">First Name</u>
          <p>
            <span id="groom_father_first_name">
              {{#if (isUndefined groom_father_first_name)}}
                N/A
              {{else}}
                {{groom_father_first_name}}
              {{/if}}
            </span>
          </p>
        </div>
        <div class="col">
          <u for="mid_name">Middle Initial</u>
          <p>
            <span id="groom_father_mid_name">
              {{#if (isUndefined groom_father_mid_name)}}
                N/A
              {{else}}
                {{groom_father_mid_name}}
              {{/if}}
            </span>
          </p>
        </div>
        <div class="col">
          <u for="last_name">Last Name</u>
          <p>
            <span id="groom_father_last_name">
              {{#if (isUndefined groom_father_last_name)}}
                N/A
              {{else}}
                {{groom_father_last_name}}
              {{/if}}
            </span>
          </p>
        </div>
      </div>
      <div class="row">
        <div class="col d-flex justify-content-end">
          <button type="button" class="btn btn-secondary mb-4 float-right" id="edit_groom_father">Edit Groom's Father</button>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col">
          <label>Officiant*</label>
          <input type="text" id="officiant" class="form-control" value="{{officiant}}">
          <p id="officiant_info_error" class="error_codes"> </p>
        </div>
        <div class="col">
          <label>Solemnizing Officer*</label>
          <input type="text" id="solemnizer" class="form-control" value="{{solemnizer}}">
          <p id="solemnizer_info_error" class="error_codes"> </p>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <label for="location">Wedding Location*</label>
          <input type="text" id="location" name="location" class="form-control" value={{location}}>
          <p id="location_error" class="error_codes"> </p>
        </div>
      </div>
      <hr class="mb-4">
      <div class="row">
        <div class="col-12 d-flex justify-content-between">
          <legend>Godmother/s</legend>
          <button id="add_gmother_button" type="button" class="plus-btn"><i style="width: 2.5em; height: 2.5em; color:black;"
              class="far fa-plus-square"></i></button>
        </div>
      </div>
      <hr class="mt-2">
      <div class="row" id="gmother_witness_row">
        {{#if witnessFemale}}
        {{#each witnessFemale}}
        {{>edit-witness this}}
        {{/each}}
        {{else}}
        <p>N/A</p>
        {{/if}}
        <p id="witness_gmother_info_error" class="error_codes"> </p>
      </div>
      <div class="row">
        <div class="col-12 d-flex justify-content-between">
          <legend>Godfather/s</legend>
          <button id="add_gfather_button" class="plus-btn" type="button"><i style="width: 2.5em; height: 2.5em; color:black;"
              class="far fa-plus-square"></i></button>
        </div>
      </div>
      <hr class="mt-2">
      <div class="row" id="gfather_witness_row">
        {{#if witnessMale}}
        {{#each witnessMale}}
        {{>edit-witness this}}
        {{/each}}
        {{else}}
        <p>N/A</p>
        {{/if}}
        <p id="witness_gfather_info_error" class="error_codes"> </p>
      </div>
      <div class="row my-3">
        <div class="col">
          <button class="btn btn-secondary mb-4">Save Changes</button>
        </div>
      </div>
    </div>

  
  <div class="modal fade" id="femaleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"><span id="female_modal_title">Add Godmother</span></h5>
          <button type="button" id="close_modal" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col">
              <input type="radio" name="female_radio" id="female_non_member"> Non Member
              <input class="mb-3" name="female_radio" type="radio" id="female_member" checked> Member
              <span id="female_none_div">
                <input type="radio" name="female_radio" id="female_none"> None
              </span>
              <div id="female_member_div" style="display:block">
                <label>Select Member</label>
                <select name="input_female_member" id="input_female_member">
                  {{>dropdown females}}
                </select>
              </div>
              <fieldset class="form-group" id="female_non_member_div" style="display:none">
                <div class="div">
                  <div class="row">
                    <div class="col-12">
                      <label for="female_first_name">First Name</label>
                      <input type="text" id="female_first_name" name="female_first_name" class="form-control">
                    </div>
                    <div class="col-12">
                      <label for="female_mid_name">Middle Initial</label>
                      <input type="text" id="female_mid_name" name="female_mid_name" class="form-control">
                    </div>
                    <div class="col-12">
                      <label for="witness_last_name">Last Name</label>
                      <input type="text" id="female_last_name" name="female_last_name" class="form-control">
                    </div>
                  </div>
                </div>
              </fieldset>
              <p id="female_modal_info_error" class="error_codes"> </p>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" id="cancel_modal" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="save_female_btn">Save changes</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="maleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"><span id="maleModalTitle">Add Godfather</span></h5>
          <button type="button" id="close_modal" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col">
              <input type="radio" id="male_non_member"> Non Member
              <input class="mb-3" type="radio" id="male_member" checked disabled> Member
              <span id="male_none_div"><input type="radio" id="male_none"> None</span>
              <div id="witness_gfather_member_div" style="display:block">
                <label>Select Witness</label>
                <select name="input_male" id="input_male_member">
                  {{>dropdown males}}
                </select>
              </div>
              <fieldset class="form-group" id="male_non_member_div" style="display:none">
                <div class="div">
                  <div class="row">
                    <div class="col-12">
                      <label for="male_first_name">First Name</label>
                      <input type="text" id="male_first_name" name="male_first_name" class="form-control">
                    </div>
                    <div class="col-12">
                      <label for="witness_mid_name">Middle Initial</label>
                      <input type="text" id="male_mid_name" name="male_mid_name" class="form-control">
                    </div>
                    <div class="col-12">
                      <label for="witness_last_name">Last Name</label>
                      <input type="text" id="male_last_name" name="male_last_name" class="form-control">
                    </div>
                  </div>
                </div>
              </fieldset>
              <p id="male_modal_info_error" class="error_codes"> </p>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" id="cancel_modal" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="save_male_btn">Save changes</button>
        </div>
      </div>
    </div>
  </div>
</form>