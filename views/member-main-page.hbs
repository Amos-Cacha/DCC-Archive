<style>
  @import url(/css/fonts.css);

  #header {
      font-family: JuliusSansPro;
  }
</style>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark d-flex justify-content-between">
  <div class="d-flex flex-row">
    <button style="background-color: transparent; border: none; padding: none"><a class="navbar-brand mt-1 ms-2" href="/login"><i class="fas fa-arrow-left"></i></a></button>
    <a id="header" class="navbar-brand" href="/login">Disciple Christian Church</a>
  </div>
  <div class="d-flex justify-content-end" id="navbarSupportedContent">
    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
      <li class="nav-item dropdown">
        <a class="nav-link mx-3" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="fas fa-bars"></i>
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
          <li><a class="dropdown-item" href="#">Settings</a></li>
          <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item" href="/logout">Logout</a></li>
        </ul>
      </li>
    </ul>
  </div>
</nav>

<div class="container mt-4">
  <div class="row">
    <div class="col d-flex justify-content-between">
      <h1> Add Member </h1>
      <a href="/add_member"><i style="width: 3em; height: 3em; color:black;" class="far fa-plus-square"></i></a>
    </div>
  </div>
  <div class="row">
      <div class="row mt-3" style="--bs-gutter-x: 0rem;">
        <div class="col-1 tile">
          <p class="variables"> Member ID </p>
        </div>
        <div class="col-2 tile">
          <p class="variables"> Name </p>
        </div>
        <div class="col-1 tile">
          <p class="variables"> Birth Date </p>
        </div>
        <div class="col-2 tile">
          <p class="variables"> Contact Number </p>
        </div>
        <div class="col tile">
          <p class="variables"> Email Address </p>
        </div>
        <div class="col tile">
          <p class="variables"> Address </p>
        </div>
      </div>
      {{#each members}}
        <div class="row" style="--bs-gutter-x: 0rem;">
          <div class="col-1 tile">
            <p class="variables"> {{this.member_id}} </p>
          </div>
            <div class="col-2 tile">
                <a href="/member/{{this.member_id}}"> <p class="variables"> {{this.first_name}} {{this.last_name}} </p> </a>
            </div>
          <div class="col-1 tile">
            <p class="variables"> {{dateView this.birthday}} </p>
          </div>
          <div class="col-2 tile">
            <p class="variables"> {{this.mobile}} </p>
          </div>
          <div class="col tile">
            <p class="variables"> {{this.email}} </p>
          </div>
          <div class="col tile">
            <p class="variables"> {{this.address}} </p>
          </div>
        </div>
      {{/each}}
  </div>
</div>